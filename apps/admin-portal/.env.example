# =========================================================
# Admin Portal (Vite) .env.example
# =========================================================
ADMIN_PORTAL_PORT=5175

# Where the API is reachable from the browser
VITE_API_BASE_URL=http://localhost:3002

# =========================================================
# Auth0 SPA (Admin Portal)
# =========================================================
VITE_AUTH0_DOMAIN=your-tenant.us.auth0.com
VITE_AUTH0_CLIENT_ID=your-client-id
VITE_AUTH0_AUDIENCE=https://api.superapp.com

# Admin portal callback
VITE_AUTH0_REDIRECT_URI=http://localhost:5175/callback

# Optional dev helpers
VITE_DEV_AUTO_AUTH=true
VITE_SHOW_DEBUG=true
