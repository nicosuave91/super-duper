# =========================================================
# Environment
# =========================================================
APP_ENV=development
LOG_LEVEL=info

# =========================================================
# API server
# =========================================================
API_HOST=0.0.0.0
API_PORT=3002

# Used by frontends (Vite only exposes VITE_* to browser code)
VITE_API_BASE_URL=http://localhost:3002

# =========================================================
# Web apps (Vite dev servers)
# =========================================================
ADMIN_PORTAL_PORT=5171
MARKETING_SITE_PORT=5172
TENANT_PORTAL_PORT=5173

# Some API flows may need absolute portal URLs (CORS/redirects/links)
ADMIN_PORTAL_BASE_URL=http://localhost:5171
MARKETING_SITE_BASE_URL=http://localhost:5172
TENANT_PORTAL_BASE_URL=http://localhost:5173

# =========================================================
# Database
# =========================================================
DATABASE_URL=postgres://postgres:postgres@localhost:5432/superapp

# =========================================================
# Auth (Auth0 / JWKS)
# =========================================================
AUTH_JWKS_URL=https://YOUR_DOMAIN/.well-known/jwks.json
AUTH_ISSUER=https://YOUR_DOMAIN/
AUTH_AUDIENCE=YOUR_AUDIENCE

# Dev-only fallback (if you support local JWTs)
JWT_DEV_SECRET=dev-secret-change-me

# =========================================================
# Stripe
# =========================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID=price_...
